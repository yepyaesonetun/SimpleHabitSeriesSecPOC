<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_topic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_start"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_topic_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mountain" />

        <ImageView
            android:id="@+id/img_topic_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_ex_large"
            android:layout_marginRight="@dimen/padding_ex_large"
            android:contentDescription="@string/descpt_imageview_for_topic_icon"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/ic_heart" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/img_topic_icon">

            <TextView
                android:id="@+id/tv_topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_small"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/tv_topic_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_topic_title"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_medium"
                android:textColor="@color/colorWhite"
                tools:text="SubTitle" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>